<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDouShouQi.MainPage"
             xmlns:Views="clr-namespace:AppDouShouQi.Views"
             BackgroundImageSource="fond.png">

    <ScrollView>
        <AbsoluteLayout>
            <FlexLayout JustifyContent="SpaceAround"
                        Direction="Row"
                        VerticalOptions="Center"
                        HorizontalOptions="Fill"
                        Wrap="Wrap"
                        AbsoluteLayout.LayoutFlags="All"
                        AbsoluteLayout.LayoutBounds="0,0,1,1">
                <VerticalStackLayout 
                     VerticalOptions="Center"
                     MinimumWidthRequest="300">
                    <Image Source="logo.png"
                           HeightRequest="400"
                           WidthRequest="400"
                           SemanticProperties.Description="logo of project" />

                    <Label
                        Text="DouShouQi"
                        TextColor="{StaticResource PointBonus}"
                        Style="{StaticResource Headline}"
                        SemanticProperties.HeadingLevel="Level1" />
                    
                </VerticalStackLayout>
                <VerticalStackLayout 
                    VerticalOptions="Center" 
                    HorizontalOptions="Fill"
                    MinimumWidthRequest="200">

                    <Button
                        Text="Jouer"
                        WidthRequest="350" HeightRequest="50"
                        HorizontalOptions="Center"
                        FontSize="24"
                        Margin="5,5" 
                        Clicked="RunPlay"/>
                    
                    <Button
                        Text="Charger Partie"
                        WidthRequest="350" HeightRequest="50"
                        HorizontalOptions="Center"
                        FontSize="24"
                        Margin="5,5"
                        Clicked="showGames"/>

                    <Button
                        Text="Tableau des scores"
                        WidthRequest="350" HeightRequest="50"
                        HorizontalOptions="Center"
                        FontSize="24"
                        Margin="5,5" 
                        Clicked="OnScoreBoard"/>

                    <Button
                        Text="Credit"
                        WidthRequest="350" HeightRequest="50"
                        HorizontalOptions="Center"
                        FontSize="24"
                        Margin="5,5" 
                        Clicked="OnCreditPage"/>
                </VerticalStackLayout>
            </FlexLayout>

            <HorizontalStackLayout AbsoluteLayout.LayoutFlags="PositionProportional"
                                   AbsoluteLayout.LayoutBounds="1,1"
                                   Padding="10,10">
                <ImageButton Source="dark_mode_icon.png"
                             Padding="18,18"
                             WidthRequest="65" HeightRequest="65"
                             CornerRadius="50"
                             BackgroundColor="{StaticResource PointBonus}" />
                <Views:FloatButtonHomePage />
            </HorizontalStackLayout>
            <Views:JouerViews HorizontalOptions="Center"
                              VerticalOptions="Center"
                              x:Name="PlayStart"
                              IsVisible="False" 
                              AbsoluteLayout.LayoutFlags="All"
                              AbsoluteLayout.LayoutBounds=".5,.5,.75,.75"/>
            <Views:GameView HorizontalOptions="Center"
                            VerticalOptions="Center"
                            x:Name="GameList"
                            IsVisible="False" 
                            AbsoluteLayout.LayoutFlags="All"
                            AbsoluteLayout.LayoutBounds=".5,.5,.75,.75"/>
        </AbsoluteLayout>
        
    </ScrollView>
</ContentPage>

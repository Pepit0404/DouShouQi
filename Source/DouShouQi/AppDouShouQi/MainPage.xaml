<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDouShouQi.MainPage"
             xmlns:Views="clr-namespace:AppDouShouQi.Views">

    <ScrollView>
        <Grid ColumnDefinitions="*,*"
              RowDefinitions="*">
            <VerticalStackLayout Grid.Row="0" Grid.Column="0"
                                 VerticalOptions="Center" >
                <Image
                    Source="dotnet_bot.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="dot net bot in a race car number eight" />

                <Label
                    Text="DouShouQi"
                    TextColor="{StaticResource PointBonus}"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />

                <Label
                    Text="Welcome to &#10;.NET Multi-platform App UI"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="Welcome to dot net Multi platform App U I" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1"
                VerticalOptions="Center" 
                HorizontalOptions="Fill">
                <Views:ButtonHomePage />

                <Button
                    Text="Charger Partie"
                    WidthRequest="350" HeightRequest="50"
                    HorizontalOptions="Center"
                    FontSize="24"
                    Margin="5,5" />

                <Button
                    Text="Tableau des scores"
                    WidthRequest="350" HeightRequest="50"
                    HorizontalOptions="Center"
                    FontSize="24"
                    Margin="5,5" />

                <Button
                    Text="Credit"
                    WidthRequest="350" HeightRequest="50"
                    HorizontalOptions="Center"
                    FontSize="24"
                    Margin="5,5" />
            </VerticalStackLayout>
            <AbsoluteLayout>
                <ImageButton Grid.Row="1"
                     Source="dark_mode_icon.png"
                     Padding="18,18"
                     WidthRequest="65" HeightRequest="65"
                     CornerRadius="50"
                     BackgroundColor="{StaticResource PointBonus}"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     AbsoluteLayout.LayoutBounds="2.1,.99,80,80" />
                <Views:FloatButtonHomePage AbsoluteLayout.LayoutFlags="PositionProportional"
                    AbsoluteLayout.LayoutBounds="1.97,.99,80,80" />
            </AbsoluteLayout>
        </Grid>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDouShouQi.Views.JouerViews"
             BackgroundColor="Black">
             
    <VerticalStackLayout HeightRequest="500" WidthRequest="750"
                         VerticalOptions="Center" >
        <HorizontalStackLayout Margin="10,20"
                               HorizontalOptions="Center">
            <Label Text="Joueur 1:"
                   TextColor="White"
                   VerticalOptions="Center"/>
            <Entry VerticalOptions="Center"
                   Placeholder="Entrez le nom du 1er joueur..." 
                   PlaceholderColor="Gray"
                   WidthRequest="200"
                   Margin="20,0"
                   TextColor="White"/>
            <Button Text="Charger" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="10,20"
                               HorizontalOptions="Center">
            <Label Text="Joueur 2:"
                   TextColor="White"
                   VerticalOptions="Center"/>
            <Entry VerticalOptions="Center"
                   Placeholder="Entrez le nom du 2e joueur..."
                   PlaceholderColor="Gray"
                   WidthRequest="200"
                   HeightRequest="10"
                   Margin="20,0"
                   TextColor="White"/>
            <Button Text="Charger"
                    Clicked="CreatePlayers_Clicked"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="10,20"
                               HorizontalOptions="Center">
            <RadioButton Content="Version classique" IsChecked="True" TextColor="White"/>
            <RadioButton Content="Version modifiÃ©e" TextColor="White" />
        </HorizontalStackLayout>
        <Button Text="Jouer" 
                Margin="20,20"/>
    </VerticalStackLayout>
</ContentView>

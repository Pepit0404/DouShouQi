<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDouShouQi.Pages.ScoreBoardPage"
             BackgroundColor="Black">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                Text="Tableau des scores"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Style="{StaticResource Headline}"
                FontSize="80"
                SemanticProperties.HeadingLevel="Level1" 
                TextColor="MediumPurple" />
            <Grid   HeightRequest="1300"
                    RowDefinitions="200,10,10,10,10,100,100,100"
                    ColumnDefinitions="270,100,230"
                    HorizontalOptions="Center">
                <Image Grid.Row="3"
                        Grid.ColumnSpan="3"
                        Grid.RowSpan="5"
                        Source="podium.jpg"
                        WidthRequest="600"
                        HeightRequest="1000" />
                <Label
                        Grid.Row="2"
                        Grid.RowSpan="4"
                        Text="Pinto"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center"
                        TextColor="MediumPurple"
                        FontSize="40" />
                <Label
                        Grid.Row="2"
                        Grid.RowSpan="4"
                        Text="0 victoire(s)"
                        VerticalOptions="End" 
                        HorizontalOptions="Center"
                        TextColor="MediumPurple"
                        FontSize="15" />
                <Label  Grid.Column="1"
                        Grid.RowSpan="6"
                        Text="R1"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        TextColor="MediumPurple" 
                        FontSize="70" />
                <Label  Grid.Column="1"
                        Grid.RowSpan="5"
                        Text="2 victoire(s)"
                        VerticalOptions="End"
                        HorizontalOptions="Center"
                        TextColor="MediumPurple" 
                        FontSize="15" />
                <Label  Grid.Column="2"
                        Grid.Row="2"
                        Grid.RowSpan="4"
                        Text="Maeva"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        TextColor="MediumPurple" 
                        FontSize="30" />
                <Label
                        Grid.Column="2"
                        Grid.Row="2"
                        Grid.RowSpan="4"
                        Text="0 victoire(s)"
                        VerticalOptions="End" 
                        HorizontalOptions="Center"
                        TextColor="MediumPurple"
                        FontSize="15" />
                
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

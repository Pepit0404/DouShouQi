<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Shadow" x:Key="labelStyle">
        <Setter Property="Brush" >
            <Setter.Value>

                <Shadow
                        Opacity="1"
                        Radius="10" 
                        Offset="1,1" >  
                    <Shadow.Brush>
                        <LinearGradientBrush>
                            <GradientStop Offset="1" Color="Black" />
                            <GradientStop Offset="1" Color="black" />
                        </LinearGradientBrush>
                    </Shadow.Brush>
                </Shadow>

            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
